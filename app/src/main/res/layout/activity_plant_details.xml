<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".plants.PlantDetailsActivity">

    <!-- Header -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/plant_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rose"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/scientific_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rosa Rubiginosa"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@+id/plant_name_header"
        app:layout_constraintStart_toStartOf="@+id/plant_name_header"
        app:layout_constraintEnd_toEndOf="@+id/plant_name_header"/>

    <!-- Plant Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/image_card"
        android:layout_width="0dp"
        android:layout_height="276dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@+id/scientific_name_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/plant_image_details"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/rose_f" />
    </androidx.cardview.widget.CardView>

    <!-- Description and Care Info -->
    <TextView
        android:id="@+id/plant_description_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Beautiful fragrant roses perfect for gardens."
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/image_card"
        app:layout_constraintStart_toStartOf="@+id/image_card"
        app:layout_constraintEnd_toEndOf="@+id/image_card"/>

    <LinearLayout
        android:id="@+id/care_info_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/plant_description_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/watering_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_watering"
            android:drawablePadding="8dp"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/sunlight_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_sunlight"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/temperature_info_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_temperature"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"/>
    </LinearLayout>

    <!-- Scrollable Planting Guide -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/care_info_container"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Planting Guide"
                android:textColor="@color/plant_dark_green"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1. Pick the Right Spot\nChoose a sunny location (at least 6–8 hours of sunlight). Good airflow prevents disease." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="3. Dig and Plant\nMake a wide hole. Place the rose in (soak bare roots first). Cover with soil, keeping the graft just above ground." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="4. Watering\nWater deeply after planting. Keep soil moist, especially in the morning." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="5. Mulching\nAdd 2–3 inches of mulch around the base to lock in moisture and stop weeds." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="6. Care &amp; Growth\nFertilize after 4–6 weeks. Prune dead stems, remove faded flowers, and watch for pests." />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/plant_dark_green"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
